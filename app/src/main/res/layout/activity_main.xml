<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etTextToEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter some text to encrypt"/>

    <Button
        android:id="@+id/btnEncryptUserText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press to Encrypt"
        android:onClick="onClick"/>

    <Button
        android:layout_marginTop="32dp"
        android:id="@+id/banDecryptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press to Decrypt"
        android:onClick="onClick"/>

    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/tvEncryptedString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDecryptedString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"/>

</LinearLayout>